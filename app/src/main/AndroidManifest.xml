<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.algirm.test2022">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KMTestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test2022"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.thirdscreen.ThirdActivity"
            android:exported="false"
            android:theme="@style/WhiteTheme"/>
        <activity
            android:name=".ui.secondscreen.SecondActivity"
            android:exported="false"
            android:theme="@style/WhiteTheme"/>
        <activity
            android:name=".ui.firstscreen.FirstActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/FirstTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>